# Server
NODE_ENV=development
API_PORT=4001
FRONTEND_ORIGIN=http://localhost:3000

# Database (local PostgreSQL)
# Example format: postgresql://<host>:<port>/<db>?schema=public
DATABASE_URL=postgresql://localhost:5433/hi_lo_game?schema=public

# Authentication
JWT_SECRET=change-me
JWT_EXPIRES_IN=1h
PASSWORD_SALT_ROUNDS=12
# Admin allowlist (comma-separated account identifiers)
ADMIN_ACCOUNTS=
# Account identifier used as login (was email)
SEED_USER_ACCOUNT=demo_account
SEED_USER_PASSWORD=changeme
SEED_USER_BALANCE=1000

# Redis / Cache
# Use a non-default port to avoid clashing with other local Redis instances.
REDIS_URL=redis://localhost:6380
CACHE_TTL_SECONDS=5

# Binance
BINANCE_WS_URL=wss://stream.binance.com:9443/ws/btcusdt@trade
BINANCE_REST_URL=https://api.binance.com/api/v3/ticker/price?symbol=BTCUSDT
BINANCE_RECONNECT_DELAY=3000
BINANCE_HEARTBEAT_INTERVAL=2000

# Game tuning (round timing, bet limits, payouts, snapshots) is stored via:
# PUT /config/game (admin-only). Defaults live in hi-lo-server/src/config/game-config.ts
ROUND_STATE_TTL=60000
PLAYER_BET_HISTORY_LIMIT=100
ROUND_HISTORY_LIMIT=100

INTEGRATION_GAME_URL=http://localhost:3000